type Query {
  gameById(id: ID): Game
  gamesByTitle(title: String): [Game!]
  reviewById(id: ID): Review
  reviewsByGameId(id: ID): [Review!]
  reviewsByAuthor(author: String): [Review!]
}

type Game {
  id: ID!
  title: String!
  description: String!
  reviews: [Review!]
}

type Review {
  id: ID!
  title: String!
  author: String!
  content: String!
  rating: Int!
  game: Game!
}
